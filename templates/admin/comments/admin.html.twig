{% extends 'base_content.html.twig' %}

{% block title %}Spill-Coffee-On-The-Keyboard{% endblock %}

{% block body %}
    {{ parent() }}

<div class="col-12">

    <div class="row border flex-md-row mb-4 shadow-sm bg-white p-4">
        <div class="col-12 p-0">
            <h1>Управление комментариями</h1>

            <form>
                <div class="input-group mb-3">
                    <input type="text"
                           name="q"
                           class="form-control"
                           placeholder="Найти..."
                           value="{{ app.request.query.get('q') }}"
                    >
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </form>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Статья</th>
                    <th>Автор</th>
                    <th>Комментарий</th>
                    <th>Дата</th>
                </tr>
                </thead>
                <tbody>
                {% for comment in  comments %}
                <tr>
                    <td><a href="#">{{ comment.articleTitle }}</a></td>
                    <td>{{ comment.authorName }}</td>
                    <td style="width: 20%;">{{ comment.comment|u.truncate(40, '...') }}</td>
                    <td> {{ comment.createdAt|ago }} </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="4">Нет комментариев</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>

{% endblock %}