{% extends 'base.html.twig' %}

{% block title %} {{ article.title }} {% endblock %}

{% block body %}

{{ parent() }}

    <div class="container">
        <div class="row">

            <div class="col-12">

                <div class="row no-gutters border flex-md-row mb-4 shadow-sm bg-white featured-border">
                    <div class="article-detail col-sm-12">
                        <div class="col-sm-12 p-2">
                            <div class="media d-flex align-content-center">
                                <img class="article-detail-image align-self-start mr-3 rounded" src="{{ asset('images/article-3.jpg') }}">
                                <div class="media-body d-inline-block align-self-center">
                                    <h1 class="mb-2">{{ article.title }}</h1>
                                    <div class="d-flex mb-2">
                                        <div class="text-muted align-self-center">
                                            <img class="article-author-img rounded-circle mr-2" src="{{ article.src }}">
                                            {{ article.author }}
                                        </div>
                                        <div class="text-muted align-self-center ml-4"><i class="fas fa-clock size-is-"></i>{{ article.clock }}</div>
                                    </div>
                                    <div class="mb-2 d-flex">
                                        {% for badge in article.badgies %}
                                            <span class="badge badge-pill badge-secondary mr-2">{{ badge }}</span>
                                        {% endfor %}
                                    </div>
                                    <div class="mb-2">
                                        <div class="text-muted align-self-center article-detail-arrows">
                                            120 
                                            <button class="btn btn-success ml-3"><i class="fas fa-arrow-up"></i></button>
                                            <button class="btn btn-danger"><i class="fas fa-arrow-down"></i></button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 mt-2 mb-4">

                            {{ articleContent | raw }}

                        </div>

                        <div class="col-sm-12 mb-4">
                            <h3><i class="pr-3 far fa-comment text-secondary"></i>3 Комментария</h3>
                            <hr>

                            <div class="row mb-4">
                                <div class="col-sm-12">
                                    <div class="comment-container align-self-start col-sm-6">
                                        <div class="form-group">
                                            <textarea class="form-control" rows="2"></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Комментировать</button>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-sm-12">
                                    <div class="media">
                                        <img class="align-self-start comment-img rounded-circle" src="{{ asset('images/profile.png') }}">
                                        <div class="media-body align-self-start col-sm-6">
                                            <b>Вью j эс</b>
                                            <small>11 дней назад</small>
                                            <br>
                                            <span class="comment"> Adipisci quia dolores non vel vero suscipit. Et voluptates aut alias consequatur.</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-sm-12">
                                    <div class="media">
                                        <img class="align-self-start comment-img rounded-circle" src="{{ asset('images/profile.png') }}">
                                        <div class="media-body align-self-start col-sm-6">
                                            <b>Фронтенд Фулстков</b>
                                            <small>11 дней назад</small>
                                            <br>
                                            <span class="comment">Nunquam transferre equiso. Amicitia, elevatus, et tumultumque. Cur extum tolerare? Ubi est rusticus domus?</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row mt-2">
                                <div class="col-sm-12">
                                    <div class="media">
                                        <img class="align-self-start comment-img rounded-circle" src="{{ asset('images/profile.png') }}">
                                        <div class="media-body align-self-start col-sm-6">
                                            <b>Барон Сосискин</b>
                                            <small>11 дней назад</small>
                                            <br>
                                            <span class="comment">Yarr, ye jolly cannibal - set sails for death!</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

  {% endblock %}  

